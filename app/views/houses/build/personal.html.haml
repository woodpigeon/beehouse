.row.step
  .span9
    %p.steps Step 3 of 3

    =simple_form_for(@house, :url => wizard_path, :method => :put, :html => {:class => 'form-horizontal'} ) do |f|
      - @house.errors.full_messages.each do |msg|
        %li= msg

      / #{state_machine attribute}_event is important - it lets you set the state and still fire callbacks %>
      
      =f.input :postcode, 
               :label => "Your postcode *", 
               :wrapper => :bootstrap, 
               :placeholder => 'e.g. SN2 2AB',
               :input_html => {:class => "input-medium" }

      =f.input :email, 
               :label => "Your email *", 
               :wrapper => :bootstrap, 
               :placeholder => "e.g. me@gmail.com",
               :input_html => {:class => "input-medium" }

      .form-actions
        = link_to 'Previous' , previous_wizard_path, :class => 'btn'
        = f.submit 'Next', :class => 'btn btn-primary' 


